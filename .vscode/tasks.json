{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}\\main.cpp",   // Compile main.cpp
                "${fileDirname}\\tinyxml2.cpp", // Compile tinyxml2.cpp
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe", // Output as executable

                // Include the directory where tinyxml2.h and other headers are located
                "-I", "${fileDirname}\\include", // Ensure correct path to the headers

                // Link the library directory where libcurl.a or libcurl.dll.a is located
                "-L", "${fileDirname}/lib",

                // Link against libcurl and OpenSSL libraries
                "-lcurl",
                "-lssl",
                "-lcrypto"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
